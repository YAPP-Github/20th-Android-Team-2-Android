<resources>

    <style name="Theme.BestFriends.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/color_sub</item>
        <item name="colorOnSecondary">@color/color_sub</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="Theme.BestFriends.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_icon_splash_screen</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.BestFriends.NoActionBar</item>
    </style>

</resources>
